# Backend Environment Variables
# Copy this file to .env and fill in the values

# Environment
NODE_ENV=dev

# DynamoDB Tables (optional - defaults are provided)
DYNAMODB_USERS_TABLE=invest-assist-users-dev
DYNAMODB_PORTFOLIOS_TABLE=invest-assist-portfolios-dev
DYNAMODB_PLANS_TABLE=invest-assist-plans-dev
DYNAMODB_EXECUTIONS_TABLE=invest-assist-executions-dev
DYNAMODB_AUTH_TOKENS_TABLE=invest-assist-auth-tokens-dev
DYNAMODB_REFRESH_TOKENS_TABLE=invest-assist-refresh-tokens-dev
DYNAMODB_NOTIFICATION_LOGS_TABLE=invest-assist-notification-logs-dev

# JWT Secret ARN (required for production)
JWT_SECRET_ARN=

# SES (required for email notifications)
SES_FROM_EMAIL=

# App URL (for email links)
APP_URL=http://localhost:5173

# AI Provider (Gemini)
GEMINI_API_KEY=
# Or use ARN in production
# GEMINI_API_KEY_ARN=
# Model (Optional, defaults to gemini-3-flash-preview)
# Options:
# - gemini-3-flash-preview (Next-gen fast preview)
# - gemini-3-pro-preview (Next-gen high performance)
# - gemini-1.5-pro (Stable)
GEMINI_MODEL=gemini-3-flash-preview

# Sentry (Optional for error tracking)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# DynamoDB Local (optional - for local testing)
DDB_ENDPOINT=http://localhost:8000
