{
  "name": "@invest-assist/api",
  "version": "0.0.1",
  "private": true,
  "description": "Backend API for invest-assist (Lambda + API Gateway)",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "dev:local": "tsx watch src/local.ts",
    "start:local": "tsx src/local.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist .aws-sam"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.490.0",
    "@aws-sdk/client-secrets-manager": "^3.490.0",
    "@aws-sdk/client-ses": "^3.490.0",
    "@aws-sdk/lib-dynamodb": "^3.490.0",
    "@invest-assist/core": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "jose": "^5.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.131",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/uuid": "^9.0.7",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  }
}
