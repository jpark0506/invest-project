{
  "name": "@invest-assist/core",
  "version": "0.0.1",
  "private": true,
  "description": "Framework-agnostic core logic for investment calculations",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
